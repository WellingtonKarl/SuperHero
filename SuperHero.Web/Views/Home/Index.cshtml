@model CharactersViewModel
@{
    ViewData["Title"] = "Consulta de Personagens";
}

<script src="~/js/jquery-3.5.1.min.js" type="text/javascript"></script>

<style>
    .form-col {
        width: 300px;
        padding: 6px;
    }

    #divHero {
        background-color: lightgray;
        width: 504px;
        height: 364px;
        box-shadow: 0 0 1em black;
        margin: -150px 0 0 604px;
        border-radius: 5px 5px;
        border: 1px solid black;
    }

    #imageHero {
        width: 220px;
        height: 320px;
        box-shadow: 0 0 1em black;
        border-radius: 5px 5px;
        margin: 20px 20px 20px 20px;
        position: absolute;
    }

    #description {
        overflow: auto;
        width: 220px;
        border-radius: 5px 5px;
        height: 320px;
        margin: 20px 20px 20px 20px;
        padding: 5px 5px 5px 5px;
        position: relative;
        float: right;
    }

    #divComic {
        background-color: lightgray;
        width: 1200px;
        height: 400px;
        box-shadow: 0 0 1em black;
        border-radius: 5px 5px;
        margin-top: 20px;
        border: 1px solid black;
    }

    #imageComic {
        box-shadow: 0 0 1em black;
        margin: 20px 20px 20px 20px;
        height: 356px;
        width: 300px;
        border-radius: 5px 5px;
        position: absolute;
    }

    #descriptionComic {
        overflow: auto;
        font-size: larger;
        font-style: italic;
        margin: 20px 20px 20px 20px;
        padding: 5px 5px 5px 5px;
        height: 356px;
        width: 750px;
        border-radius: 5px 5px;
        position: relative;
        float: right;
    }
</style>

<script type="text/javascript">

    function CallLoadInformationSuperHero(id) {
        $.get('@Url.Action("LoadInformationsSuperHero", "Home")', { id: id }, function (response) {
            
            $('#comboComics').html(response.combo);
            $('#imageHero').html(response.image);
            $('#description').html(response.description);
        });
    }

    $(function () {
        $('#ddlSuperHero').change(function () {
            if ($(this).val() != "")
                CallLoadInformationSuperHero($(this).val());

            if ($('#imageComic').html() != "" || $('#descriptionComic').html() != "") {
                $('#imageComic').html("");
                $('#descriptionComic').html("");
            }
        });
    });

    function Limpar() {

        $('#ddlSuperHero').val("");
        $('#comboComics').empty();
        $('#imageHero').html("");
        $('#description').html("");
        $('#imageComic').html("");
        $('#descriptionComic').html("");
    }
</script>

<div style="display:flex; flex-wrap:wrap; justify-content:space-between;">
    <div style="margin-top:40px">
        <div class="form-col">
            <label>Super Herói</label>
            @Html.DropDownList("ddlSuperHero", Model.NameSuperHero, "Selecione...")
        </div>
        <div id="comboComics" class="form-col">

        </div>
        <div class="form-col">
            <button class="btn-outline-secondary" onclick="Limpar()">Limpar Consulta</button>
        </div>
    </div>

    <div id="divHero">
        <div id="imageHero">

        </div>
        <div id="description">
            <p>@ViewBag.DescriptionHero</p>
        </div>

    </div>
    <div id="divComic">
        <div id="imageComic">
            
        </div>
        <div id="descriptionComic">
            <p>@ViewBag.Description</p>
        </div>
    </div>
</div>


